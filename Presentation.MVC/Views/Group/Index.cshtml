@model IEnumerable<Domain.Model.Entities.GroupEntity>

@{
    ViewData["Title"] = "Index";
}
<section class="container-fluid">
    <h1>Band List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Formed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nation)
                </th>
                <th> Actions </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Formed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nation)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                            <i class="far fa-edit"> </i>
                            Edit
                        </a>

                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                            <i class="fas fa-eye"> </i>
                            Details
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="far fa-trash-alt"> </i> 
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>




