@model IEnumerable<Domain.Model.Entities.AlbumEntity>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="container-fluid">
    <p>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </p>
    <h1>Album List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecordCompany)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataLancamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Remasterizado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RecordCompany)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataLancamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Remasterizado)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                            <i class="far fa-edit"> </i>
                            Edit
                        </a>

                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                            <i class="fas fa-eye"> </i>
                            Details
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                            <i class="far fa-trash-alt"> </i>
                            Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</section>
       
